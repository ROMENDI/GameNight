<div class="container mt-5">
  <h2>Edit Event</h2>
  <%= form_for @event do |f| %>
    <% if @event.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
        <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group mb-3">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control', rows: 5 %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :date_time, "Event Date and Time" %>
      <%= f.datetime_local_field :date_time, value: @event.date_time&.strftime('%Y-%m-%dT%H:%M'), class: 'form-control', step: 60 %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :location %>
      <%= f.text_field :location, class: 'form-control' %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :capacity %>
      <%= f.number_field :capacity, class: 'form-control', min: 1 %>
    </div>

    <% if Game.any? %>
      <div class="form-group mb-3">
        <%= f.label :game_id, "Select a Game" %>
        <%= f.collection_select :game_id, Game.all, :id, :title, include_blank: true, class: 'form-control' %>
      </div>
    <% end %>

    <%= f.submit "Update Event", class: 'btn btn-primary' %>
  <% end %>
  <%= link_to @event, class: 'btn btn-secondary mt-3' do %>
    <i class="fas fa-arrow-left"></i> Back to Event
  <% end %>
</div>
