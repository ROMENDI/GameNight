<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h4>Host New Event</h4>
        </div>
        <div class="card-body">
          <%= form_for @event, html: { class: 'needs-validation', novalidate: true } do |f| %>
            <% if @event.errors.any? %>
              <div id="error_explanation" class="alert alert-danger">
                <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
                <ul>
                  <% @event.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group mb-3">
              <%= f.label :title %>
              <%= f.text_field :title, autofocus: true, class: 'form-control', placeholder: "Event Title" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :description %>
              <%= f.text_area :description, class: 'form-control', rows: 5, placeholder: "Event Description" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :date_time, "Event Date and Time" %>
              <%= f.datetime_local_field :date_time, class: 'form-control', placeholder: "YYYY-MM-DD HH:MM" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :location %>
              <%= f.text_field :location, class: 'form-control', placeholder: "Event Location" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :capacity %>
              <%= f.number_field :capacity, min: 1, class: 'form-control', placeholder: "Maximum Attendees", required: true %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :game_id, "Select a Game" %>
              <%= f.collection_select :game_id, @games, :id, :title, { prompt: "Choose a Game" }, { class: 'form-control' } %>
            </div>

            <div class="actions">
              <%= f.submit "Create Event", class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
