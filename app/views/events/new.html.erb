<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-success text-white">
          <h4 class="mb-0">Host New Event</h4>
        </div>
        <div class="card-body">
          <%= form_for @event, html: { class: 'needs-validation', novalidate: true } do |f| %>
            <% if @event.errors.any? %>
              <div id="error_explanation" class="alert alert-danger">
                <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
                <ul>
                  <% @event.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :title, class: 'form-label' %>
              <%= f.text_field :title, autofocus: true, class: 'form-control', placeholder: "Event Title" %>
            </div>

            <div class="mb-3">
              <%= f.label :description, class: 'form-label' %>
              <%= f.text_area :description, class: 'form-control', rows: 5, placeholder: "Event Description" %>
            </div>

            <div class="mb-3">
              <%= f.label :date_time, "Event Date and Time", class: 'form-label' %>
              <%= f.datetime_local_field :date_time, class: 'form-control', placeholder: "YYYY-MM-DD HH:MM" %>
            </div>

            <div class="mb-3">
              <%= f.label :location, class: 'form-label' %>
              <%= f.text_field :location, class: 'form-control', placeholder: "Event Location" %>
            </div>

            <div class="mb-3">
              <%= f.label :capacity, class: 'form-label' %>
              <%= f.number_field :capacity, min: 1, class: 'form-control', placeholder: "Maximum Attendees" %>
            </div>
            <div class="mb-3">
              <%= f.label :game_id, "Select a Game", class: 'form-label' %>
              <%= f.collection_select :game_id, @games, :id, :title, { prompt: "Choose a Game" }, { class: 'form-control' } %>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <%= f.submit class: 'btn btn-primary' do %>
                <i class="fas fa-check"></i> Create Event
              <% end %>
              <%= link_to root_path, class: 'btn btn-secondary ms-2' do %>
                <i class="fas fa-times"></i> Cancel
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
